  },
  "devDependencies": {
    "babel-core": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-preset-latest": "6.24.1",
    "babel-preset-stage-1": "6.24.1",
    "concurrently": "3.4.0",
    "cult": "2.0.6",
    "eslint": "3.19.0",
    "eslint-config-standard": "6.2.1",
