    "prestart": "npm run build",
    "start": "static-server ./dest",

    "prewatch": "npm run clean",
    "watch": "concurrently \"cult -- watch\" \"webpack-dev-server\"",

    "test": "echo \"Error: no test specified\" && exit 1"
  },
